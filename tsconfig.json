{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["DOM"],
    "module": "ESNext",
    "moduleResolution": "Node10",
    "noErrorTruncation": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vitest/globals", "vitest/importMeta"]
  },
  "exclude": [
    "tsup.config.ts",
    "node_modules",
    "dist",
    "vitest.config.ts",
    "examples"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
