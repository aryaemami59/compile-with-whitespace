{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["DOM"],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node", "vitest/globals", "vitest/importMeta"],
    "baseUrl": ".",
    "skipLibCheck": true,
  },
  "exclude": [
    "tsup.config.ts",
    "node_modules",
    "dist",
    "vitest.config.ts",
    "examples",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    },
  },
}
